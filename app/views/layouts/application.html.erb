<!DOCTYPE html>
<html>
  <head>
    <title>Finalprojectstore</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= form_with(url: search_products_path, method: :get, local: true) do %>
    <div class="field is-grouped mb-5">
      <div class="control is-expanded">
        <%= text_field_tag(:keywords, nil, class: "input", placeholder: "Search available products") %>
      </div>
      <div class="control">
        <%= submit_tag("Search", class: "button is-primary") %>
      </div>
    </div>
  <% end %>
    <%= yield %>
  </body>
</html>
